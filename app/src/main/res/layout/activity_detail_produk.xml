<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailProduk">

    <ImageView
        android:id="@+id/img_detail_prod"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="125dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Product"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_detil_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_detail_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_detail_slug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_detail_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Merchant"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_detail_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_detail_mname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_detail_mslug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Category"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_detail_cid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_detail_cname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"/>

</LinearLayout>